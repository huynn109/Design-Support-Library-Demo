<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.huy.androiddesignsupportlibrarydemo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.Demo">
        <activity android:name=".ui.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.CoordinatorLayoutActivity"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/AppTheme.Demo" />
        <activity
            android:name=".ui.activity.TabActivity"
            android:label="@string/title_activity_tab"
            android:theme="@style/AppTheme.Demo.NotStransparent" />
        <activity
            android:name=".ui.activity.TabStripActivity"
            android:label="@string/title_activity_tab"
            android:theme="@style/AppTheme.Demo.NotStransparent" />

    </application>

</manifest>